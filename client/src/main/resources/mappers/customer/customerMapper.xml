<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.management.client.dao.CustomerDao">
    <insert id="insert" parameterType="com.management.client.vo.CustomerVo">
        insert into customer
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="name != null">
                `name`,
            </if>
            <if test="type != null">
                `type`,
            </if>
            <if test="telephoneNumber != null">
                telephone_number,
            </if>
            <if test="address != null">
                address,
            </if>
            <if test="superintendent != null">
                superintendent,
            </if>
            <if test="remark != null">
                remark,
            </if>
            <if test="createBy != null">
                create_by,
            </if>
            <if test="createTime != null">
                create_time,
            </if>
        </trim>
        <trim prefix="VALUES (" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="name != null">
                #{name},
            </if>
            <if test="type != null">
                #{type},
            </if>
            <if test="telephoneNumber != null">
                #{telephoneNumber},
            </if>
            <if test="address != null">
                #{address},
            </if>
            <if test="superintendent != null">
                #{superintendent},
            </if>
            <if test="remark != null">
                #{remark},
            </if>
            <if test="createBy != null">
                #{createBy},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
        </trim>
    </insert>

    <delete id="delete" parameterType="integer">
        update customer
        set delete_is = 1
        where id = #{id}
    </delete>

    <update id="update" parameterType="com.management.client.vo.CustomerVo">
        UPDATE customer
        <trim prefix="set" suffixOverrides=",">
            <if test="name != null">
                name = #{name},
            </if>
            <if test="type != null">
                `type` = #{type},
            </if>
            <if test="telephoneNumber != null">
                telephone_number = #{telephoneNumber},
            </if>
            <if test="address != null">
                address = #{address},
            </if>
            <if test="superintendent != null">
                superintendent = #{superintendent},
            </if>
            <if test="remark != null">
                remark = #{remark},
            </if>
            <if test="createBy != null">
                create_by = #{createBy},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
        </trim>
        WHERE id = #{id}
    </update>

    <select id="getCustomerById" parameterType="integer" resultType="com.management.client.vo.CustomerVo">
        select id,
               `name`,
               `type`,
               telephone_number,
               address,
               superintendent,
               remark,
               create_by,
               create_time
        from customer
        where id = #{id}
    </select>

    <select id="getAllCustomer" resultType="com.management.client.vo.CustomerVo">
        select id,
               `name`,
               `type`,
               telephone_number,
               address,
               superintendent,
               remark,
               create_by,
               create_time
        from customer
        <where>
            delete_is = 0
            <if test="name != null">
                AND `name` like CONCAT("%",#{name},"%")
            </if>
            <if test="superintendent != null">
                AND `superintendent` like CONCAT("%",#{superintendent},"%")
            </if>
        </where>
    </select>
</mapper>